<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_register_nav"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/accountOptionFragment"
        android:name="com.example.e_commerce.fragments.AccountOptionFragment"
        android:label="AccountOptionFragment"
        tools:layout="@layout/fragment_account_options">
        <action
            android:id="@+id/action_accountOptionFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="false"/>
        <action
            android:id="@+id/action_accountOptionFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.e_commerce.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment2"
            app:destination="@id/registerFragment"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/introductionFragment"
        android:name="com.example.e_commerce.fragments.IntroductionFragment"
        android:label="fragment_introduction"
        tools:layout="@layout/fragment_introduction"
        >
        <action
            android:id="@+id/action_introductionFragment_to_accountOptionFragment"
            app:destination="@id/accountOptionFragment"
            app:popUpToInclusive="false"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.e_commerce.fragments.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpToInclusive="false"/>
    </fragment>
</navigation>