<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_left_texture"
        android:src="@drawable/ic_texture_left"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:3"
        />

    <ImageView
        android:id="@+id/image_elips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/guideline_elips_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_elips_right"
        android:src="@drawable/ellips"
        app:layout_constraintTop_toTopOf="@+id/guideline_elips_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_elips_bottom"
        app:layout_constraintDimensionRatio="1:1"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRightAddressForShopping"
        style="@style/h4"
        android:layout_marginTop="@dimen/tvRightAddressMargin"
        app:layout_constraintStart_toStartOf="@id/image_elips"
        app:layout_constraintEnd_toEndOf="@id/image_elips"
        app:layout_constraintBottom_toBottomOf="@id/image_elips"
        app:layout_constraintTop_toTopOf="@id/guideline_left_texture"
        android:text="@string/right_address"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textRightAddressForShopping"
        app:layout_constraintEnd_toEndOf="@id/textRightAddressForShopping"
        app:layout_constraintTop_toBottomOf="@id/textRightAddressForShopping"
        android:textAlignment="center"
        android:gravity="center"
        style="@style/h3"
        android:fontFamily="@font/poppins_light"
        android:layout_margin="15dp"
        android:padding="6dp"
        android:id="@+id/textQuality"
        android:text="@string/quality"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_texture_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_left_texture"
        />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/blueButtonStyle"
        android:layout_width="@dimen/smallButtonWidth"
        android:layout_height="@dimen/smallButtonHeight"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/textQuality"
        app:layout_constraintStart_toStartOf="@id/textQuality"
        app:layout_constraintTop_toBottomOf="@id/textQuality" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="489dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_elips_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_elips_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_elips_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="592dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_elips_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="380dp" />




</androidx.constraintlayout.widget.ConstraintLayout>